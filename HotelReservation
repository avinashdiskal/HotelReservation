import java.util.Scanner;

public class HotelReservation {
    static String[] roomTypes = { "Standard", "Deluxe", "Suite" };
    static boolean[] isBooked = { false, false, false };
    static String[] bookedBy = new String[3];

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int choice;

        do {
            System.out.println("\n--- Hotel Reservation System ---");
            System.out.println("1. View Available Rooms");
            System.out.println("2. Book a Room");
            System.out.println("3. Cancel Reservation");
            System.out.println("4. View All Bookings");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();
            sc.nextLine();

            switch (choice) {
                case 1 -> showAvailableRooms();
                case 2 -> bookRoom(sc);
                case 3 -> cancelBooking(sc);
                case 4 -> viewBookings();
                case 5 -> System.out.println("Thank you for using the system!");
                default -> System.out.println("Invalid choice.");
            }
        } while (choice != 5);
    }

    static void showAvailableRooms() {
        System.out.println("\nAvailable Rooms:");
        for (int i = 0; i < roomTypes.length; i++) {
            if (!isBooked[i]) {
                System.out.println((i + 1) + ". " + roomTypes[i]);
            }
        }
    }

    static void bookRoom(Scanner sc) {
        showAvailableRooms();
        System.out.print("Enter room number to book (1-3): ");
        int roomChoice = sc.nextInt();
        sc.nextLine();

        if (roomChoice < 1 || roomChoice > 3) {
            System.out.println("Invalid room choice.");
            return;
        }

        if (isBooked[roomChoice - 1]) {
            System.out.println("Room already booked.");
            return;
        }

        System.out.print("Enter your name: ");
        String name = sc.nextLine();

        isBooked[roomChoice - 1] = true;
        bookedBy[roomChoice - 1] = name;

        System.out.println("Room booked successfully by " + name);
        System.out.println("Payment confirmed (simulated)");
    }

    static void cancelBooking(Scanner sc) {
        System.out.print("Enter your name to cancel booking: ");
        String name = sc.nextLine();
        boolean found = false;

        for (int i = 0; i < bookedBy.length; i++) {
            if (name.equalsIgnoreCase(bookedBy[i])) {
                isBooked[i] = false;
                bookedBy[i] = null;
                System.out.println("Booking cancelled for " + name);
                found = true;
                break;
            }
        }

        if (!found) {
            System.out.println("No booking found for " + name);
        }
    }

    static void viewBookings() {
        System.out.println("\nCurrent Bookings:");
        boolean hasBooking = false;
        for (int i = 0; i < roomTypes.length; i++) {
            if (isBooked[i]) {
                System.out.println(roomTypes[i] + " Room - Booked by " + bookedBy[i]);
                hasBooking = true;
            }
        }
        if (!hasBooking) {
            System.out.println("No rooms booked yet.");
        }
    }
}
